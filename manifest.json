{
    "manifest_version": 2,
    "name": "LinkedIn AdBlocker",
    "description": "A simple ad blocker for LinkedIn.",
    "version": "0.0.1",
    "author": "Rashu Sharda",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "browser_action": {
        "default_title": "LinkedIn AdBlocker"
    },
    "permissions": [
        "tabs",
        "webNavigation",
        "https://www.linkedin.com/"
    ],
    "background": {
        "scripts": [
            "extension.js"
        ]
    }
}